<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ye.tcptest.MainActivity">


    <EditText
        android:id="@+id/edit_ip"
        android:layout_width="197dp"
        android:layout_height="44dp"
        android:text="@string/edit_ip"
        android:selectAllOnFocus="true"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        tools:layout_editor_absoluteY="7dp" />

    <EditText
        android:id="@+id/edit_port"
        android:layout_width="92dp"
        android:layout_height="42dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:text="@string/edit_port"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/edit_ip"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.169" />

    <EditText
        android:id="@+id/edit_send"
        android:layout_width="131dp"
        android:layout_height="35dp"
        android:selectAllOnFocus="true"
        android:text="send.."
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="56dp"
        app:layout_constraintHorizontal_bias="0.915"
        app:layout_constraintTop_toTopOf="@+id/edit_port"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.982" />



    <Button
        android:id="@+id/btn_send"
        android:layout_width="173dp"
        android:layout_height="51dp"
        android:layout_weight="1"
        android:text="@string/btn_send"
        android:textSize="25sp"
        android:layout_marginRight="6dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="1dp"
        app:layout_constraintLeft_toRightOf="@+id/btn_connect"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/btn_connect"
        android:layout_width="182dp"
        android:layout_height="52dp"
        android:layout_weight="1"
        android:text="@string/btn_connect"
        android:textSize="25sp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="-1dp" />

    <TextView
        android:id="@+id/commview"
        android:layout_width="169dp"
        android:layout_height="368dp"
        android:scrollbars="vertical"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintBottom_toBottomOf="@+id/btn_send"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/edit_port"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/wifiview"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.305"
        app:layout_constraintHorizontal_bias="0.75" />

    <TextView
        android:id="@+id/wifiview"
        android:layout_width="191dp"
        android:layout_height="410dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/btn_connect"
        android:layout_marginBottom="1dp"
        app:layout_constraintTop_toTopOf="@+id/edit_ip"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.404"
        android:layout_marginLeft="-3dp"
        app:layout_constraintLeft_toLeftOf="parent" />




</android.support.constraint.ConstraintLayout>

